								.slider__block
									p.slider__title= title
									p.slider__number= number
						+slider("Ty_N_Steel", "TY", "1/7")
						+slider("Max_N_Steel_Camo", "Max", "2/7")
						+slider("Emme_S_Pink", "Emme", "3/7")
						+slider("Camile_Navy_3Quarter", "Camille", "4/7")
						+slider("Noel_Bracken", "Noel", "5/7")
						+slider("Roan_L_White", "Roan", "6/7")
						+slider("Nat_Navy", "Nat", "7/7")
				.slider__arow.slider__arow_prev
