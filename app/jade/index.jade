		section.why#why.block
			h2.title Why Plae?
			p.title__text Some of the features that make Plae shoes so good for kids
			mixin whyBlock(boots, title, text)
				div(class="why__block why__block_#{boots}")
					p.why__title= title
					p.why__text= text
					.why__line(width="50" height="50")
			.why__wrap-block
				.why__wrap.why__wrap_left
					+whyBlock("pull", "Pull Tab", "makes it easy for little hands and fingers to get their shoes on.")
					+whyBlock("shock", "Shock Absorption", "removable ECO-ORTHOLITE® anti-microbial, anti-bacterial insole, made from castor beans, provides superior protection with renewable resources.")
					+whyBlock("custom", "Custom Fit & Style", "interchangeable tabs come in S,M,L,XL sizes to accommodate instep widths and allows kids to make it their own with different color, material and print options. Plae shoes also have the ability to fit AFO ")
					+whyBlock("eco", "Eco-Friendly", "made in a solar powered, fair labour factory using recycled milk jugs (PET), ISO certified leathers, and water-based ")
				.why__bg-block
					.why__bg
						mixin bootsSvg()
							svg.why__svg(width="24" height="24")
								circle.why__circle.why__circle_opacity(r="50%" cx="50%" cy="50%")
								circle.why__circle(r="33.333%" cx="50%" cy="50%")
						.why__boots.why__boots_pull
							+bootsSvg()
						.why__boots.why__boots_shock
							+bootsSvg()
						.why__boots.why__boots_custom
							+bootsSvg()
						.why__boots.why__boots_eco
							+bootsSvg()
						.why__boots.why__boots_toe
							+bootsSvg()
						.why__boots.why__boots_machine
							+bootsSvg()
						.why__boots.why__boots_form
							+bootsSvg()
						.why__boots.why__boots_flexible
							+bootsSvg()
						.why__boots.why__boots_traction
							+bootsSvg()
				.why__wrap.why__wrap_right
					+whyBlock("machine", "Machine Washable*", "for when kids get dirty.")
					+whyBlock("form", "Anatomical Form", "specially engineered sole follows the natural contour of a child’s foot - which is mostly")
					+whyBlock("flexible", "Flexible Sole", "promotes natural movement by allowing for a free range of movement.")
					+whyBlock("traction", "Passive Traction", "promotes natural movement by providing grip on loose earth without compromising contact on hard surfaces.")
					+whyBlock("toe", "Toe Guard", "protects both the foot and shoe from toe drag.")
